<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lovehate.loveandhate.Settings"
    android:background="#0e2f44">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sound"
        android:id="@+id/sound"
        android:layout_above="@+id/close"
        android:layout_alignStart="@+id/loveHate"
        android:layout_marginBottom="64dp"
        android:layout_alignEnd="@+id/loveHate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/love_hate"
        android:id="@+id/loveHate"
        android:layout_above="@+id/sound"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Love"
        android:id="@+id/close"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/sound"
        android:layout_marginBottom="37dp"
        android:layout_alignEnd="@+id/loveHate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Love"
        android:id="@+id/love"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hate"
        android:id="@+id/hate"
        android:layout_alignTop="@+id/love"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="46dp" />
</RelativeLayout>
